[% WRAPPER 'search/results-layout.tt' %]
        [%- IF results.size -%]
            [% WRAPPER 'components/with-pager.tt' search=1 %]
                <table class="tbl">
                    <thead>
                        <tr>
                            <th>[% l('Score') %]</th>
                            <th>[% l('Name') %]</th>
                            <th>[% l('Sort Name') %]</th>
                            <th>[% l('Type') %]</th>
                            <th>[% l('From') %]</th>
                            <th>[% l('Code') %]</th>
                            <th>[% l('Begin') %]</th>
                            <th>[% l('End') %]</th>
                        </tr>
                    </thead>
                    <tbody>
                        [%- FOR result=results -%]
                        <tr[% ' class="ev"' IF loop.count % 2 == 0 %]>
                            <td>[% result.score %]</td>
                            <td>
                                [% link_area_with_containment(result.entity) %]
                            </td>
                            <td>[% result.entity.sort_name %]</td>
                            <td>[% result.entity.l_type_name %]</td>
                            <td>
                              [%- IF result.entity.parent_country || result.entity.parent_subdivision || result.entity.parent_city %],
                                [% link_area_containment(result.entity) -%]
                              [%- END -%]
                            </td>
                            <td>[% result.entity.primary_code %]</td>
                            <td>[% result.entity.begin_date.format %]</td>
                            <td>
                              [% IF !result.entity.end_date.is_empty;
                                   result.entity.end_date.format;
                                 ELSIF result.entity.ended;
                                   l('[unknown]');
                                 END; -%]
                            </td>
                        </tr>
                        [%- END -%]
                    </tbody>
                </table>
            [% END %]
        [%- ELSE -%]
            <p>[% l('No results found. Try refining your search query.') %]</p>
        [%- END -%]
        <p>
          [% IF c.user.is_location_editor %]
              [% l('Alternatively, you may {uri|add a new area}.', {
                    uri => c.uri_for_action('/area/create', {
                             'edit-area.name' => query
                           }) }) %]
          [% END %]
        </p>
[% END %]
